!!!
%html
	%head

		-# Title
		!= Decoy::title()

		-# Boilerplate meta tags
		%meta(charset='utf-8')
		%meta(http-equiv='x-ua-compatible' content='ie=edge')
		%meta(name='viewport' content='width=device-width, initial-scale=1')

		-# Don't index the admin
		%meta(name='robots' content='noindex')

		-# CSRF token for lifting out by JS for AJAX requests
		%meta(name='csrf-token' content=csrf_token())

		-# Stylesheets
		%link(rel="stylesheet" href=config('facilitador.core.stylesheet') type="text/css")

		-# Passthrough javascript translations
		- $localization = json_encode(__('facilitador::javascript'), JSON_HEX_APOS)
		!= "<script>var LOCALIZATIONS = JSON.parse('$localization');</script>";

	%body(class=Decoy::bodyClass())

		-# Sidebar
		!= view('facilitador::layouts.sidebar._sidebar')

		-# Header
		!= view('facilitador::layouts._header', $__data)
		!= view('facilitador::layouts._breadcrumbs', $__data)
		!= view('facilitador::layouts._notifications', $__data)

		-# The main page content
		#main!= $content

		-# JS
		%script(src=config('facilitador.core.script') type="text/javascript")
